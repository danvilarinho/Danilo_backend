<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danilo.danilo_pfc">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MenuActivity"
            android:label="MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.IconesActivity"
            android:label="IconesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LetrasActivity"
            android:label="LetrasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SilabasActivity"
            android:label="SilabasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SentencasActivity"
            android:label="SentencasActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="DATABASE"
            android:value="teste.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.example" />

        <activity android:name=".activity.ExercLetrasActivity" />
        <activity android:name=".activity.ExercSilabasActivity" />
        <activity android:name=".activity.ExercSentencasActivity"></activity>
    </application>

</manifest>